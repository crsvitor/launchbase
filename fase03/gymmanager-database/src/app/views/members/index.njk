{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <div class="header">
        <a class="button" href="/members/create">Novo</a>
        <form action="/members" method="GET">
            <input type="text" 
                name="filter" 
                placeholder="Nome ou Email"
                value={{filter}}
                >

                <button type="submit">Filtrar</button>
        </form>
    </div>
    
    <table width="100%">
        <thead> {# cabeçalho #}
           <tr> {# cada linha é uma tr #}
               <th> {# cada coluna é uma th #}
                   Membro
               </th>
               <th>
                   Email
               </th>
               <th>
                   Peso
               </th>
               <th>
                   Altura
               </th>
               <th>
                   Ação
               </th>
           </tr> 
        </thead>
        <tbody> {# corpo #}
            {% for member in members %}
                <tr> {# linha #}
                    <td> {# coluna #}
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{member.name}}
                    </td>
                     <td> {# coluna #}
                        {{member.email}} 
                    </td>
                    <td> {# coluna #}
                        {{member.weight}} kg
                    </td>
                    <td> {# coluna #}
                        {{member.height}} cm
                    </td>
                    <td> {# coluna #}
                        <a href="/members/{{member.id}}">ver</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
></div>

</div>
{% endblock content %}